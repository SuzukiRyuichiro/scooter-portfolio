<div class="card">
  <div class="img-cover"><%= image_tag "#{project}/1.webp", alt: "screenshot" %>
  </div>
  <div class="desc">
    <h3 class="app-name">
      <%= project_name %>
    </h3>
    <div class="d-flex justify-content-around mb-3">
      <% link_to app do%>
      <div class="my-2">
        <i class="fas fa-desktop"></i> App
      </div>
      <% end %>
      <% link_to github do%>
      <div class="my-2">
        <i class="fab fa-github"></i> Code
      </div>
      <% end %>
    </div>
    <% link_to "projects/#{project}" do %>
    <div class="read-more">
        Read more <i class="fas fa-arrow-right"></i>
    </div>
    <% end %>
  </div>
</div>
