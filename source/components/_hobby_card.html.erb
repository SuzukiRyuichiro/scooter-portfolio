<div class="card mb-3" style="max-width: 540px;" data-aos="<%= aos %>">
  <div class="row g-0">
    <div class="col-md-4">
      <%= image_tag "#{photo}", alt: "alttext", class: "card-img" %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= title %></h5>
        <p class="card-text"><%= content %></p>
        <p class="card-text"><small class="text-muted"><%= link %></small></p>
      </div>
    </div>
  </div>
</div>
